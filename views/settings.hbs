{{#section 'script'}}
<script>
    $("#WatermarkSwitch").change(function () {
        if ($(this).prop("checked") == true) {
            console.log("Watermark Toggle is now set to On");
            $("#showOnlyIfOnWatermark").fadeIn("slow");
        } else {
            console.log("Watermark Toggle is currently set to Off");
            $("#showOnlyIfOnWatermark").fadeOut("slow");
        }
    });
    $("#RemoteStorageSwitch").change(function () {
        if ($(this).prop("checked") == true) {
            console.log("Remote Storage Toggle is now set to On");
            $("#showOnlyIfOnRemoteStorage").fadeIn("slow");
        } else {
            console.log("Remote Storage Toggle is currently set to Off");
            $("#showOnlyIfOnRemoteStorage").fadeOut("slow");
        }
    });
</script>
