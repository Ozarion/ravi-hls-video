<style>
    .video-model-content {
        width: 674px;
    }
</style>

<div class="row card-container">
    <div class="col-md-12">
        <div class="card card-user main-card">
            <div class="card-header">
                <h2 class="card-title">Settings</h2>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-md-5 pr-1">
                            <label>Selected Intro Video: </label>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-md-3">
                            <div>
                                <input type="radio" id="previewNone" name="intro" value="previewNone" checked>
                                <label for="previewNone">None</label><br>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div>
                                <input type="radio" id="preview1" name="intro" value="preview1">
                                <label for="preview1">Intro Video 1</label>
                                <br>
                                <button type="button" class="btn btn-primary btn-round" data-toggle="modal"
                                    data-target="#preview1Modal">Preview</button>
                                <br>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div>
                                <input type="radio" id="preview2" name="intro" value="preview2">
                                <label for="preview2">Intro video 2</label>
                                <br>
                                <button type="button" class="btn btn-primary btn-round" data-toggle="modal"
                                    data-target="#preview2Modal">Preview</button>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div>
                                <input type="radio" id="preview3" name="intro" value="preview3">
                                <label for="preview3">Intro video 3</label>
                                <br>
                                <button type="button" class="btn btn-primary btn-round" data-toggle="modal"
                                    data-target="#preview3Modal">Preview</button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5 pr-1">
                            <h5>Video Process Settings:</h5>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-md-12 pb-1">
                            <label>Watermark:</label>
                            <div class="row">
                                <div class="col-md-6 pb-5">
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="WatermarkSwitch">
                                        <label class="custom-control-label" for="WatermarkSwitch">Use Watermark:</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div id="showOnlyIfOnWatermark" style="display: none;">
                                        <button type="button" class="btn btn-primary float-right" data-toggle="modal"
                                            data-target="#WatermarkModal">
                                            Open To Set/Edit
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 pb-1">
                            <label>Selected Video Bitrate (Kbps): </label>
                            <select class="custom-select mr-sm-2" id="BitrateSelect">
                                <option selected>Default</option>
                                <option value="bitrate1">400kbps (Low)</option>
                                <option value="bitrate2">800 - 1200kbps (Medium)</option>
                                <option value="bitrate3">1200 - 1500kbps (High)</option>
                                <option value="bitrate3">1500 - 4000kbps (Hd)</option>
                                <option value="bitrate3">8000- 14000kbps (4K)</option>
                            </select>
                        </div>
                        <div class="col-md-6 pb-1">
                            <label>Selected Audio Bitrate/Quality (Kbps): </label>
                            <select class="custom-select mr-sm-2" id="AudioBitrateSelect">
                                <option selected>Default</option>
                                <option value="Audiobitrate1">96 kbps (Low)</option>
                                <option value="Audiobitrate2">192 kbps (Medium)</option>
                                <option value="Audiobitrate3">320 kbps (High)</option>
                            </select>
                        </div>
                        <div class="col-md-6 pb-1">
                            <label>Selected Video Resolution: </label>
                            <select class="custom-select mr-sm-2" id="ResolutionSelect">
                                <option selected>Default</option>
                                <option value="resolution2">240p (426x240) LOW</option>
                                <option value="resolution3">360p (640x360) Medium</option>
                                <option value="resolution4">480p (854x480) High</option>
                                <option value="resolution5">720p (1280x720) HD</option>
                                <option value="resolution6">2160p (3840x2160) 4k</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5 pr-1">
                            <h5>User Settings:</h5>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="CurrentPassword">Current Password</label>
                                <input type="password" class="form-control" id="CurrentPassword">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="NewPassword">New Password</label>
                                <input type="password" class="form-control" id="NewPassword">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ConFirmPassword">Confirm Password</label>
                                <input type="password" class="form-control" id="ConfirmPassword">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5 pr-1">
                            <h5>Remote Settings:</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 pb-5">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" id="RemoteStorageSwitch">
                                <label class="custom-control-label" for="RemoteStorageSwitch">Use Remote
                                    Storage:</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div id="showOnlyIfOnRemoteStorage" style="display: none;">
                                <button class="btn btn-primary float-right" type="button" data-toggle="collapse"
                                    data-target="#RemoteStorageSettings" aria-expanded="false"
                                    aria-controls="RemoteStorageSettings">
                                    Settings
                                </button>
                            </div>

                        </div>
                        <div class="col-md-12">
                            <div class="collapse" id="RemoteStorageSettings">
                                <div class="btn-group mb-5" role="group" aria-label="ActionButtons">
                                    <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target="#AddNewRemoteStorageModal">Add New</button>
                                    <button type="button" class="btn btn-danger">Remove All</button>
                                </div>
                                <div>
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Storage Type</th>
                                                <th scope="col">Server Name</th>
                                                <th scope="col" class="float-right">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row">1</th>
                                                <td>FTP</td>
                                                <td>Admin</td>
                                                <td class="float-right">
                                                    <button type="button" class="btn btn-Secondary"
                                                        id="ViewRemoteSetting" data-toggle="modal"
                                                        data-target="#ViewRemoteStorageModal">View</button>
                                                    <button type="button" class="btn btn-warning" id="EditRemoteSetting"
                                                        data-toggle="modal"
                                                        data-target="#EditRemoteStorageModal">Edit</button>
                                                    <button type="button" class="btn btn-danger"
                                                        id="DeleteRemoteSetting">Delete</button>

                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="update ml-auto mr-auto">
                            <button type="submit" class="btn btn-primary btn-round">Save Settings</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Remote Storage Modals -->
<div class="modal fade " id="AddNewRemoteStorageModal" tabindex="-1" role="dialog"
    aria-labelledby="AddNewRemoteStorageLabel" aria-hidden="true">
