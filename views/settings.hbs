                            <select class="form-control" id="StorageTypeOptions" disabled>
                                <option selected>FTP</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="ServerName">Server Name</label>
                            <input class="form-control" type="text" placeholder="Type Server Name" id="ServerName">
